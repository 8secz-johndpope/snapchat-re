<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="oval">
            <padding android:bottom="@dimen/neon_header_circular_notification_shadow_offset"/>
            <gradient android:startColor="@color/black" android:endColor="@color/transparent" android:type="radial" android:gradientRadius="@dimen/neon_header_circular_notification_shadow_radius" android:centerColor="@color/black_seventy_five_opacity"/>
            <size android:height="@dimen/neon_header_circular_notification_shadow_size" android:width="@dimen/neon_header_circular_notification_shadow_size"/>
        </shape>
    </item>
    <item android:left="@dimen/default_gap_quarter" android:right="@dimen/default_gap_quarter">
        <shape android:shape="oval">
            <solid android:color="@color/snapchat_yellow"/>
            <size android:height="@dimen/neon_header_circular_notification_background_size" android:width="@dimen/neon_header_circular_notification_background_size"/>
        </shape>
    </item>
</layer-list>
