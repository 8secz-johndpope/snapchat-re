    </ViewFlipper>
    <TextView android:textSize="16sp" android:textColor="@color/regular_red" android:gravity="center" android:layout_gravity="center" android:id="@+id/content_interests_tags_clear_button" android:padding="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/interests_tags_clear_button_text"/>
</merge>
