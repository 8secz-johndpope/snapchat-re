<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt">
    <View android:id="@+id/camera_touch_receiver" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <View android:id="@+id/camera_front_facing_flash" android:background="#ccffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <include layout="@layout/v11_hova_search_bar"/>
    <View android:id="@+id/camera_mode_dropdown_overlay" style="@style/camera_mode_dropdown_overlay"/>
    <LinearLayout android:id="@+id/vertical_container" android:paddingTop="@dimen/vertical_container_padding_top" android:layoutDirection="ltr" style="@style/hova_header_vertical_container">
        <ImageView android:id="@+id/camera_flip_button" android:src="@drawable/camera_flip_icon" android:contentDescription="@string/flip_camera" style="@style/hova_header_icon_vertical_base_normal_margin"/>
        <ImageView android:id="@+id/camera_flash_button" android:src="@drawable/camera_flash_drawable" android:contentDescription="@string/camera_flash_switch" style="@style/hova_header_icon_vertical_base_normal_margin"/>
        <ViewStub android:id="@+id/camera_night_mode_button_stub" android:layout="@layout/camera_night_mode_button_layout" style="@style/hova_header_icon_vertical_base_normal_margin"/>
        <LinearLayout android:id="@+id/camera_mode_vertical_container" style="@style/hova_header_vertical_container">
            <ViewStub android:id="@+id/camera_mode_divider_one_stub" android:layout="@layout/camera_mode_divider" android:inflatedId="@+id/camera_mode_divider_one" style="@style/hova_header_icon_vertical_base_divider"/>
            <ViewStub android:id="@+id/camera_mode_batch_capture_stub" android:layout="@layout/camera_mode_batch_capture_icon_layout" android:inflatedId="@+id/camera_mode_batch_capture_icon" style="@style/hova_header_icon_vertical_base_normal_margin_horizontal_container"/>
            <ViewStub android:id="@+id/camera_mode_timer_stub" android:layout="@layout/camera_mode_timer_layout" android:inflatedId="@+id/camera_mode_timer" style="@style/hova_header_icon_vertical_base_normal_margin_horizontal_container"/>
            <ViewStub android:id="@+id/camera_mode_portrait_stub" android:layout="@layout/camera_mode_portrait_icon_layout" android:inflatedId="@+id/camera_mode_portrait_icon" style="@style/hova_header_icon_vertical_base_normal_margin_horizontal_container"/>
            <ViewStub android:id="@+id/camera_mode_grid_level_stub" android:layout="@layout/camera_mode_grid_level_button_layout" android:inflatedId="@+id/camera_mode_grid_level_button" style="@style/hova_header_icon_vertical_base_normal_margin_horizontal_container"/>
            <ViewStub android:id="@+id/camera_mode_dropdown_stub" android:layout="@layout/camera_mode_dropdown_layout" style="@style/hova_header_icon_vertical_base_dropdown"/>
        </LinearLayout>
    </LinearLayout>
    <ViewStub android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/camera_hands_free_recording_lock" android:inflatedId="@+id/camera_hands_free_recording_lock" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</merge>
