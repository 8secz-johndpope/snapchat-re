<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/tfa_setup_new_phone_layout" android:background="@color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.snap.ui.view.ScHeaderView android:layout_width="match_parent" android:layout_height="wrap_content" app:headerColorScheme="@color/regular_green" app:headerTitle="@string/settings_tfa_settings_header" app:showBackArrow="true" app:showBottomBorder="true"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/default_gap_2x" android:layout_marginEnd="@dimen/default_gap_2x">
            <com.snap.ui.view.SnapFontTextView android:gravity="center_horizontal" android:id="@+id/phone_form_explanation" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap_2x" android:layout_marginBottom="@dimen/default_gap_2x" android:text="@string/settings_tfa_new_phone_explanation" style="@style/IdentitySettingsCopyText"/>
            <com.snap.identity.ui.shared.phonenumber.PhonePickerView android:id="@+id/phone_picker" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap"/>
            <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/registration_error_message_text_size" android:textColor="@color/error_red" android:id="@+id/phone_form_err_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap" android:minLines="1" android:paddingStart="@dimen/default_gap" android:paddingEnd="@dimen/default_gap"/>
            <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/registration_error_message_text_size" android:textColor="@color/regular_green" android:id="@+id/phone_response_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap" android:minLines="1" android:paddingStart="@dimen/default_gap" android:paddingEnd="@dimen/default_gap"/>
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.snap.ui.view.SnapFontEditText android:layout_gravity="start" android:id="@+id/verify_code" android:background="@drawable/holo_edit_text_black_selector" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/ui_element_unit" android:layout_marginTop="@dimen/default_gap" android:hint="@string/settings_mobile_number_verification_code_hint" android:maxLength="6" android:inputType="number" style="@style/Widget.Holo.EditText"/>
                <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/wrong_verify_code_cleaner" android:visibility="invisible" style="@style/IdentityErrorRedX"/>
            </FrameLayout>
            <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/registration_error_message_text_size" android:textColor="@color/error_red" android:id="@+id/verify_code_err_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap" android:minLines="1" android:paddingStart="@dimen/default_gap" android:paddingEnd="@dimen/default_gap"/>
            <com.snap.ui.view.SnapLinkFriendlyTextView android:id="@+id/verify_help" android:paddingTop="@dimen/default_gap_2x" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/locked_help_unlock" android:paddingStart="@dimen/default_gap" android:paddingEnd="@dimen/default_gap" style="@style/IdentityFinePrintText"/>
        </LinearLayout>
    </ScrollView>
    <com.snap.identity.ui.settings.shared.SettingsPhoneButton android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/continue_button" android:layout_width="match_parent" android:layout_height="@dimen/registration_continue_button_height"/>
</LinearLayout>
