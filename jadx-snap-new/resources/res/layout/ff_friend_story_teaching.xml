<?xml version="1.0" encoding="utf-8"?>
<com.snapchat.android.framework.ui.views.SoftNavAwareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/friend_story_teaching" android:layout_width="wrap_content" android:layout_height="wrap_content">
