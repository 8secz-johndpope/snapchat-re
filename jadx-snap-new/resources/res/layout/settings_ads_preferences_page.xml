<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/ads_settings_preferences_page" android:background="@color/section_header_background_color" android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="80dp">
    <TextView android:textSize="@dimen/subpage_description_text_size" android:textColor="@color/dark_charcoal" android:gravity="center" android:background="@color/transparent" android:paddingTop="@dimen/default_gap_1_5x" android:paddingBottom="@dimen/default_gap_1_5x" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ad_preferences_description" android:paddingStart="@dimen/subpage_description_padding_horizontal" android:paddingEnd="@dimen/subpage_description_padding_horizontal"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/ads_settings_preferences_audience_section" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:minHeight="80dp" style="@style/new_settings_item_outer">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/audience_opt_out_section" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/audience_match_title" android:layout_weight="1" style="@style/new_settings_item_name"/>
            <CheckBox android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/settings_ads_preferences_audience_opt_out_checkbox" style="@style/new_settings_checkbox"/>
        </LinearLayout>
        <TextView android:id="@+id/settings_audience_opt_out_desc" android:paddingTop="2dp" android:paddingBottom="2dp" android:text="@string/audience_match_desc" style="@style/new_settings_item_subtext"/>
        <TextView android:textSize="@dimen/subpage_learn_more_text_size" android:textColor="@color/dark_blue" android:id="@+id/settings_audience_opt_out_learn_more_button" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/audience_match_desc_learn_more"/>
    </LinearLayout>
    <include android:id="@+id/saving_section_separator" layout="@layout/list_separator"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/ads_settings_preferences_activity_section" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:minHeight="80dp" style="@style/new_settings_item_outer">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/activity_opt_out_section" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/external_activity_match_title" android:layout_weight="1" style="@style/new_settings_item_name"/>
            <CheckBox android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/settings_ads_preferences_external_activity_opt_out_checkbox" style="@style/new_settings_checkbox"/>
        </LinearLayout>
        <TextView android:id="@+id/settings_activity_opt_out_desc" android:paddingTop="2dp" android:paddingBottom="2dp" android:text="@string/external_activity_match_desc" style="@style/new_settings_item_subtext"/>
        <TextView android:textSize="@dimen/subpage_learn_more_text_size" android:textColor="@color/dark_blue" android:id="@+id/settings_activity_opt_out_learn_more_button" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/external_activity_desc_learn_more"/>
    </LinearLayout>
</LinearLayout>
