<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:id="@+id/signup_captcha_page" android:background="@color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/header_icon" android:layout_width="@dimen/signup_ghost_icon_size" android:layout_height="@dimen/signup_ghost_icon_size" android:layout_marginTop="@dimen/default_gap_3x" android:src="@drawable/profile_addedme_ghost12" android:scaleType="fitStart" android:adjustViewBounds="true" android:layout_centerHorizontal="true"/>
    <com.snap.ui.view.SnapFontTextView android:id="@+id/snapchat_title" android:text="@string/signup_snapcha_title" android:layout_below="@+id/header_icon" android:layout_alignParentTop="false" style="@style/IdentityPageTitle"/>
    <com.snap.ui.view.SnapFontTextView android:id="@+id/description" android:visibility="gone" android:text="@string/signup_snapcha_description" android:layout_below="@+id/snapchat_title" style="@style/IdentityPageDescription"/>
    <com.snap.ui.view.SquareRelativeLayout android:gravity="center" android:id="@+id/loading_area" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/description">
        <com.snap.ui.view.SnapFontTextView android:id="@+id/loading_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/captcha_loading_images" android:layout_centerInParent="true" style="@style/IdentityFinePrintText"/>
        <com.snap.ui.view.LoadingSpinnerView android:id="@+id/progress_bar" android:layout_width="@dimen/ui_element_unit" android:layout_height="@dimen/ui_element_unit" android:layout_below="@+id/loading_textview" android:layout_centerInParent="true" style="@style/LoginSignupProgressBar"/>
    </com.snap.ui.view.SquareRelativeLayout>
    <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/text_size_small" android:gravity="center" android:id="@+id/failed_download" android:paddingTop="@dimen/default_gap_3x" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/signup_failed_download_snapcha" android:layout_below="@+id/snapchat_title" android:layout_centerHorizontal="true"/>
    <com.snap.ui.view.button.ScButton android:textColor="@color/white" android:gravity="center" android:id="@+id/retry_button" android:visibility="gone" android:layout_width="@dimen/alert_dialog_button_min_width" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap_3x" android:layout_below="@+id/failed_download" android:layout_centerHorizontal="true" app:scButtonText="@string/signup_download_snapcha_retry"/>
    <android.support.v7.widget.RecyclerView android:id="@+id/snapcha_grid" android:background="@drawable/signup_snapcha_round_corners" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/default_gap" android:scaleType="centerCrop" android:layout_above="@+id/continue_button" android:layout_below="@+id/description"/>
    <com.snap.identity.api.sharedui.ProgressButton android:id="@+id/continue_button" android:layout_marginBottom="@dimen/default_gap_2x" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:buttonText="@string/continue_next" style="@style/LoginSignupButton"/>
    <FrameLayout android:id="@+id/back_button" android:layout_width="60dp" android:layout_height="60dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <ImageView android:layout_gravity="top|left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap" android:src="@drawable/medium_grey_mirrorable_navigation_back_arrow" android:layout_marginStart="@dimen/default_gap"/>
    </FrameLayout>
</RelativeLayout>
