<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/fragment_settings_password_change_page" android:background="@color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.snap.ui.view.ScHeaderView android:layout_width="match_parent" android:layout_height="wrap_content" app:headerColorScheme="@color/regular_green" app:headerTitle="@string/settings_password_change_header" app:showBackArrow="true" app:showBottomBorder="true"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/default_gap_2x" android:layout_marginEnd="@dimen/default_gap_2x">
            <com.snap.ui.view.SnapFontTextView android:gravity="center_horizontal" android:id="@+id/password_change_page_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap_2x" android:text="@string/settings_password_change_description" style="@style/IdentitySettingsCopyText"/>
            <FrameLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap_2x">
                <com.snap.ui.view.SnapFontEditText android:id="@+id/password_change_new_password_field" android:background="@drawable/holo_edit_text_black_selector" android:layout_width="match_parent" android:layout_height="@dimen/ui_element_unit" android:hint="@string/settings_password_change_new_password_field_hint" android:inputType="textPassword" style="@style/Widget.Holo.EditText"/>
                <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/password_change_new_password_error_red_x" android:layout_marginEnd="@dimen/default_gap" style="@style/IdentityErrorRedX"/>
                <com.snap.ui.view.SnapFontTextView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/password_change_new_password_emoji" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/default_gap"/>
                <ProgressBar android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/password_change_new_password_strength_progress_bar" android:layout_width="@dimen/settings_inline_progress_bar_size" android:layout_height="@dimen/settings_inline_progress_bar_size" android:layout_marginEnd="@dimen/default_gap"/>
            </FrameLayout>
            <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/registration_error_message_text_size" android:textColor="@color/error_red" android:id="@+id/password_change_new_password_error_message" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.snap.ui.view.SnapFontEditText android:id="@+id/password_change_confirm_password_field" android:background="@drawable/holo_edit_text_black_selector" android:layout_width="match_parent" android:layout_height="@dimen/ui_element_unit" android:hint="@string/settings_password_change_confirm_password_field_hint" android:maxLength="60" android:inputType="textPassword" style="@style/Widget.Holo.EditText"/>
                <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/password_change_confirm_password_error_red_x" android:layout_marginEnd="@dimen/default_gap" style="@style/IdentityErrorRedX"/>
            </FrameLayout>
            <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/registration_error_message_text_size" android:textColor="@color/error_red" android:id="@+id/password_change_confirm_password_error_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/settings_password_change_password_does_not_match"/>
        </LinearLayout>
    </ScrollView>
    <com.snap.identity.ui.settings.shared.SettingsStatefulButton android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/password_change_save_button" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/registration_continue_button_height" style="@style/IdentitySettingsContinueButton"/>
</LinearLayout>
