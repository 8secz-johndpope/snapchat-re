<?xml version="1.0" encoding="utf-8"?>
<com.snapchat.android.framework.ui.views.RoundedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/black_forty_opacity" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/image_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.snapchat.android.framework.ui.views.RoundedImageView android:id="@+id/button_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/overlay_text" android:background="@color/black_forty_opacity" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:maxLines="1"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/text_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:includeFontPadding="false"/>
            <TextView android:textSize="12sp" android:textColor="@color/light_charcoal" android:ellipsize="end" android:id="@+id/detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
</com.snapchat.android.framework.ui.views.RoundedFrameLayout>
