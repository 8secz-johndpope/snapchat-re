        <com.snap.ui.view.SnapFontTextView android:textSize="16sp" android:textColor="#16191c" android:id="@+id/map_status_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.snap.ui.view.SnapFontTextView android:textSize="10sp" android:textColor="#a05dcd" android:ellipsize="end" android:id="@+id/map_status_subtext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
    </LinearLayout>
</RelativeLayout>
