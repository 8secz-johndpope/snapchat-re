        </LinearLayout>
        <com.snap.ui.view.emoji.SnapEmojiTextView android:id="@+id/primary_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/second_text" app:autoFit="true" app:autoFitMinTextSize="16sp" app:scFontWeight="2" style="@style/sc_story_card_primary_text_v2_alignment"/>
        <com.snap.ui.view.SnapFontTextView android:id="@+id/second_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" app:scFontWeight="1" style="@style/story_card_secondary_text_v2"/>
    </RelativeLayout>
    <include layout="@layout/debug_card_button_layout_stub"/>
</com.snapchat.android.framework.ui.views.RoundedFrameLayout>
