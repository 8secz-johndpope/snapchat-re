<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/avatar_container" android:longClickable="true" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="4dp" android:layout_marginBottom="8dp" android:layout_alignParentTop="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_alignParentStart="true"/>
    <FrameLayout android:id="@+id/action_button_container" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="4dp" android:layout_marginBottom="8dp" android:layout_alignParentTop="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_alignParentEnd="true">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/create_chat_button_container" android:background="@drawable/blue_chat_pill" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layoutDirection="ltr">
            <ImageView android:layout_gravity="center" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/map_chat_group_icon" android:paddingStart="@dimen/default_gap"/>
            <com.snap.ui.view.SnapFontTextView android:textColor="@color/regular_blue" android:layout_gravity="center" android:id="@+id/create_chat_button" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/explore_chat" android:paddingStart="5dp" android:paddingEnd="10dp" app:scFontWeight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/settings_button_container" android:background="@drawable/grey_settings_pill" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/user_card_settings_gear" android:tint="@color/explore_ghost_mode_settings_grey" android:paddingStart="@dimen/default_gap"/>
            <com.snap.ui.view.SnapFontTextView android:textColor="@color/explore_ghost_mode_settings_grey" android:layout_gravity="center" android:id="@+id/ghost_settings_button" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/map_explore_settings" android:paddingStart="5dp" android:paddingEnd="@dimen/default_gap_1_5x" app:scFontWeight="1"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="4dp" android:layout_marginBottom="8dp" android:layout_alignParentTop="true" android:layout_toStartOf="@+id/action_button_container" android:layout_toEndOf="@+id/avatar_container">
        <com.snap.ui.view.SnapFontTextView android:textSize="16sp" android:textColor="#16191c" android:ellipsize="end" android:id="@+id/user_full_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
        <com.snap.ui.view.SnapFontTextView android:textSize="12sp" android:textColor="#b9c0c7" android:ellipsize="end" android:id="@+id/user_locality" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:maxLines="1"/>
    </LinearLayout>
    <View android:gravity="center" android:id="@+id/spacer" android:background="#f7f8f9" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="4dp" android:layout_below="@+id/avatar_container"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/spacer" android:layout_marginStart="@dimen/default_gap" android:layout_marginEnd="@dimen/default_gap">
        <com.snap.ui.view.SnapFontTextView android:textSize="16sp" android:textColor="#16191c" android:id="@+id/user_activity_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.snap.ui.view.SnapFontTextView android:textSize="10sp" android:textColor="#b9c0c7" android:ellipsize="end" android:id="@+id/user_activity_subtext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
    </LinearLayout>
</RelativeLayout>
