            <ImageView android:layout_gravity="center_vertical" android:background="@drawable/cognac_badge_user" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="@dimen/chat_drawer_tile_player_badge_text_normal_size" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/cognac_chat_drawer_player_badge_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/chat_drawer_tile_player_badge_text_margin_start"/>
        </LinearLayout>
    </FrameLayout>
</com.snap.cognac.impl.chatdrawer.CognacChatDrawerItemLayout>
