        <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/text_size_default" android:textColor="@color/dark_grey" android:gravity="end" android:id="@+id/product_review_product_original_price" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/product_details_section" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_toStartOf="@+id/product_review_product_price_field" android:layout_toEndOf="@+id/product_review_product_image_wrapper">
