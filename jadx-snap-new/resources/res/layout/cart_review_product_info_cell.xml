    </LinearLayout>
    <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/text_size_small" android:textColor="@color/marco_polo_nav_bar_right_btn" android:gravity="center" android:id="@+id/product_review_buttons" android:background="@drawable/marco_polo_pill_button_selector" android:layout_width="@dimen/default_gap_10x" android:layout_height="@dimen/default_gap_3_5x" android:layout_marginTop="@dimen/default_gap" android:layout_below="@+id/product_details_section" android:drawableEnd="@drawable/marco_polo_down_caret_dark" android:paddingStart="@dimen/default_gap_1_5x" android:paddingEnd="@dimen/default_gap_2x" android:layout_toEndOf="@+id/product_review_product_image_wrapper" app:scFontWeight="1"/>
    <com.snap.ui.view.button.SnapFontButton android:textSize="@dimen/text_size_small" android:textColor="@color/marco_polo_nav_bar_right_btn" android:gravity="center" android:id="@+id/product_review_remove_button" android:background="@drawable/marco_polo_pill_button_selector" android:layout_width="100dp" android:layout_height="30dp" android:layout_marginTop="@dimen/default_gap" android:text="@string/commerce_remove_product" android:layout_below="@+id/product_details_section" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/product_review_buttons" app:scFontWeight="1"/>
</RelativeLayout>
