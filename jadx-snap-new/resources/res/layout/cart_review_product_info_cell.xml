<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/product_review_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/cart_review_product_info_cell_padding" android:layout_marginStart="@dimen/cart_review_product_info_cell_padding" android:layout_marginEnd="@dimen/cart_review_product_info_cell_padding">
    <RelativeLayout android:id="@+id/image_placeholder" android:layout_width="@dimen/cart_review_product_cell_size" android:layout_height="@dimen/cart_review_product_cell_size" android:layout_marginTop="@dimen/default_gap_2x" android:layout_marginBottom="@dimen/default_gap_2x" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <com.snapchat.android.framework.ui.views.LoadingSpinnerView android:layout_width="@dimen/default_gap_3x" android:layout_height="@dimen/default_gap_3x" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
