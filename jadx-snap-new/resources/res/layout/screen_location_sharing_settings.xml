<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/location_sharing_settings_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layoutDirection="locale">
    <com.snapchat.android.framework.ui.views.statusbar.StatusBarCustomView android:id="@+id/sharing_settings_status_bar_padding" android:layout_width="match_parent" android:layout_height="0dp" app:scFixedHeight="0dp"/>
