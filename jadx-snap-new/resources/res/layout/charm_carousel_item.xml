<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/upchs_charm_card" android:background="@drawable/charm_card_item_background" android:padding="@dimen/upchs_card_padding" android:layout_width="@dimen/upchs_card_width" android:layout_height="@dimen/upchs_nested_scroll_height" android:layout_marginRight="@dimen/upchs_card_spacing">
