<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/channel_page" android:background="@color/transparent" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:background="@drawable/channel_fragment_background" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/channel_header" android:layout_width="match_parent" android:layout_height="@dimen/channel_pivot_header_height">
