        </FrameLayout>
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/channel_header">
            <android.support.v7.widget.RecyclerView android:layout_gravity="center" android:id="@+id/recycler_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>
