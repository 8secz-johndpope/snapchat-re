                <TextView android:id="@+id/s2r_report_a_technical_issue_label" android:text="@string/s2r_i_spotted_a_bug_label" style="@style/new_settings_item_name"/>
            </FrameLayout>
            <include android:id="@+id/section_separator_1" android:layout_width="match_parent" android:layout_height="@dimen/single_dp" layout="@layout/list_separator"/>
            <FrameLayout android:id="@+id/s2r_report_issue_contact_us_suggest_improvement_frame_layout" android:background="@drawable/settings_menu_item_selector" android:padding="@dimen/default_gap_2x" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/settings_selectable_item_container">
                <TextView android:id="@+id/s2r_suggest_an_improvement_label" android:text="@string/s2r_i_have_a_suggestion" style="@style/new_settings_item_name"/>
            </FrameLayout>
            <include android:id="@+id/section_separator_2" android:layout_width="match_parent" android:layout_height="@dimen/single_dp" layout="@layout/list_separator"/>
            <FrameLayout android:id="@+id/s2r_report_issue_contact_us_report_safety_concern_frame_layout" android:background="@drawable/settings_menu_item_selector" android:padding="@dimen/default_gap_2x" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/settings_selectable_item_container">
                <TextView android:id="@+id/s2r_report_a_safety_concern" android:text="@string/s2r_i_have_a_safety_concern" style="@style/new_settings_item_name"/>
            </FrameLayout>
            <include android:id="@+id/section_separator_3" android:layout_width="match_parent" android:layout_height="@dimen/single_dp" layout="@layout/list_separator"/>
            <FrameLayout android:id="@+id/s2r_report_issue_privacy_question_frame_layout" android:background="@drawable/settings_menu_item_selector" android:padding="@dimen/default_gap_2x" android:layout_width="wrap_content" android:layout_height="match_parent" style="@style/settings_selectable_item_container">
                <TextView android:id="@+id/s2r_privacy_question" android:text="@string/s2r_i_have_a_privacy_question" style="@style/new_settings_item_name"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/s2r_feature_description_text_size" android:textColor="@color/dark_grey" android:ellipsize="end" android:id="@+id/s2r_settings_report_issue_information_collection_string" android:padding="@dimen/default_gap_2x" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerVertical="true" app:scFontWeight="0"/>
</RelativeLayout>
