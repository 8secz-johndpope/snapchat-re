<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/in_app_report_fragment" android:background="@color/white" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_gravity="top" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/in_app_report_understand_button_height">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.snap.imageloading.view.SnapImageView android:layout_gravity="center_horizontal" android:id="@+id/in_app_report_ghost" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/report_ghost" style="@style/InAppReportGhostImage"/>
            <com.snap.ui.view.SnapFontTextView android:gravity="center" android:id="@+id/report_timeout_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/in_app_report_title_timeout" android:lineSpacingMultiplier="1" android:alpha="0.8" app:scFontWeight="1" style="@style/InAppReportTimeOutText"/>
            <com.snap.ui.view.SnapFontTextView android:id="@+id/report_message_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.1" android:alpha="0.8" style="@style/InAppReportMessageText"/>
        </LinearLayout>
    </ScrollView>
    <com.snap.ui.view.SnapFontTextView android:layout_gravity="bottom" android:id="@+id/report_understand_button" style="@style/InAppReportUnderstandButton"/>
</FrameLayout>
