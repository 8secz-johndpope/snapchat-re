<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:custom="http://schemas.android.com/custom" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:background="@drawable/add_friend_gradient_background" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/scan_snapcode_header" android:layout_width="match_parent" android:layout_height="@dimen/add_friends_header">
            <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/neon_header_text_size" android:textColor="@color/add_friends_color" android:ellipsize="end" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/scan_snapcode" android:maxLines="1" android:fontFamily="@string/typeface_avenir_next_bold" app:scFontWeight="2"/>
            <ImageButton android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/header_dismiss_button" android:background="@drawable/header_dismiss_arrow" android:layout_width="@dimen/add_friends_dismiss_size" android:layout_height="@dimen/add_friends_dismiss_size" android:layout_marginEnd="@dimen/default_gap_2x"/>
        </FrameLayout>
        <com.snap.ui.view.SnapFontTextView android:textSize="16sp" android:textColor="@color/add_friends_color" android:gravity="center_horizontal" android:id="@+id/add_snapcode_header" android:paddingTop="@dimen/default_gap_1_5x" android:paddingBottom="@dimen/default_gap_1_5x" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/scan_snapcode_tip_new" android:maxLines="2" android:layout_below="@+id/scan_snapcode_header" android:fontFamily="@string/typeface_avenir_next_demi_bold" android:paddingStart="@dimen/default_gap_2x" android:paddingEnd="@dimen/default_gap_2x" app:scFontWeight="1"/>
        <android.support.v7.widget.RecyclerView android:id="@+id/add_snapcode_recycler_view" android:background="@android:color/white" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/navbar_inset" android:layout_below="@+id/add_snapcode_header"/>
        <View android:id="@+id/navbar_inset" android:background="@color/black" android:layout_width="match_parent" android:layout_height="0dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</FrameLayout>
